{# templates/file/booking.email.html.twig #}

{% extends 'base.half.html.twig' %}
 
{% block content %}

<div class="w3-panel w3-border-bottom w3-text-indigo">
	<p><img src="{{ asset('images/file-32.png') }}">&nbsp;</img>{{ 'file.booking.email'|trans }}</p>
</div>

{{ form_start(form, {'action': path('file_booking_email', { 'fileID': file.ID }), 'method': 'POST'}) }}

<form class="w3-container">

<p>{{ form_row(form.fileAdministrator) }}</p>
<p>{{ form_row(form.bookingUser) }}</p>

{{ form_rest(form) }}

<div class="w3-show-inline-block w3-margin-top">
<div class="w3-bar w3-border w3-round">
	<a href="{{ path('file_edit', { 'fileID': file.ID }) }}" class="w3-bar-item w3-button w3-light-gray"><i class="fa fa-times"></i>&nbsp;{{ 'cancel'|trans }}</a>
	<button type="submit" class="w3-bar-item w3-button w3-green"><i class="fa fa-check"></i>&nbsp;{{ 'validate'|trans }}</button>
</div>
</div>

</form>

{{ form_end(form) }}

{% endblock %}
