{# templates/booking/create.or.update.one.html.twig #}

{% extends 'booking/booking.html.twig' %}

{% block booking_details %}

{% block entered_by %}{% endblock %}

<div class="w3-row">

<div class="w3-half"><div class="w3-margin-right">

<ul class="w3-ul w3-border">
	<li class="w3-pale-blue"><img src="{{ asset('images/time-32.png') }}">&nbsp;{{ dateLongue(beginningDate) }}&nbsp;&rarr;&nbsp;{{ timetableLine(beginningTimetableLine) }}</li>
</ul>

{% if userFiles|length == 1 %}

{% set image = (userFiles[0].administrator) ? 'administrator-32.png' : 'user-32.png' %}
{% block userFiles_list_link %}{% endblock %}

{% else %}

<table class="w3-table w3-striped w3-margin-top">
	<tr>
	<th class="w3-pale-yellow">{{ 'users'|trans }}&nbsp;{% block userFiles_table_link %}{% endblock %}</th>
	</tr>
{% for userFile in userFiles %}
	<tr>
{% if userFile.administrator %} {% set image = 'administrator-32.png' %} {% else %} {% set image = 'user-32.png' %} {% endif %}
	<td><img src="{{ asset('images/' ~ image) }}">&nbsp;{{ userFile.getFirstAndLastName() }}</td>
	</tr>
{% endfor %}
</table>

{% endif %}

</div></div>

<div class="w3-half">

{% block period_end_link %}{% endblock %}

{% if labels|length < 1 %}

{% block labels_empty_list_link %}{% endblock %}

{% elseif labels|length == 1 %}

{% block labels_list_link %}{% endblock %}

{% else %}

<table class="w3-table w3-striped w3-margin-top">
	<tr>
	<th class="w3-pale-yellow">{{ 'label.plural'|trans }}&nbsp;{% block labels_table_link %}{% endblock %}</th>
	</tr>
{% for label in labels %}
	<tr>
	<td><img src="{{ asset('images/label-32.png') }}">&nbsp;{{ label.getName() }}</td>
	</tr>
{% endfor %}
</table>

{% endif %}

</div>

</div> 

{% if noteID <= 0 %}

{% block note_empty_link %}{% endblock %}

{% else %}

<ul class="w3-ul w3-border w3-margin-top">
	<li class="w3-pale-blue">{{ note.note }}&nbsp;{% block note_update_link %}{% endblock %}&nbsp;{% block note_delete_link %}{% endblock %}</li>
</ul>

{% endif %}

{% endblock %}
