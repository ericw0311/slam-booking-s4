{# templates/timetable/add.html.twig #}

{% extends 'base.half.html.twig' %}
 
{% block content %}

<div class="w3-panel w3-border-bottom w3-text-indigo">
	<p><img src="{{ asset('images/time-32.png') }}">&nbsp;</img>{{ 'timetable.new'|trans }}</p>
</div>

{{ form_start(form, {'action': path('timetable_add'), 'method': 'POST'}) }}

<form class="w3-container">

<p><label>{{ 'timetable.name'|trans }}</label>
{{ form_widget(form.name) }}
<span class="w3-text-red">{{ form_errors(form.name) }}</span></p>

{{ form_rest(form) }}

<div class="w3-show-inline-block">
<div class="w3-bar w3-border w3-round">
	<a href="{{ path('timetable', { 'page': 1 }) }}" class="w3-bar-item w3-button w3-light-gray"><i class="fa fa-times"></i>&nbsp;{{ 'cancel'|trans }}</a>
	<button type="submit" class="w3-bar-item w3-button w3-green"><i class="fa fa-check"></i>&nbsp;{{ 'validate'|trans }}</button>
</div>
</div>

</form>

{{ form_end(form) }}

{% endblock %}

{% block javascripts %}
	<script>document.getElementById('timetable_name').focus();</script>
{% endblock %}
