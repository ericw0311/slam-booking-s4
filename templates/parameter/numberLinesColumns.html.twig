{% extends 'base.connected.html.twig' %}
 
{% block body %}

<div class="w3-container w3-margin-top w3-blue-grey">
	<h4><i class="fa fa-wrench w3-xlarge"></i>&nbsp;{{ 'number.lines.columns'|trans }}</h4>
</div>

<div class="w3-row">

<div class="w3-quarter w3-container"></div>

<div class="w3-half w3-container">

{{ form_start(form, {'action': path('parameter_numberLinesColumns', { 'entityCode': entityCode, 'listPath': listPath }), 'method': 'POST'}) }}

<form class="w3-container">

<p>{{ form_row(form.numberLines) }}</p>
<p>{{ form_row(form.numberColumns) }}</p>

{{ form_rest(form) }}

<div class="w3-show-inline-block">
<div class="w3-bar w3-border w3-round">
	<a href="{{ path(listPath, { 'page': 1 }) }}" class="w3-bar-item w3-button w3-light-gray"><i class="fa fa-user"></i>&nbsp;{{ 'cancel'|trans }}</a>
	<button type="submit" class="w3-bar-item w3-button w3-green"><i class="fa fa-check"></i>&nbsp;{{ 'validate'|trans }}</button>
</div>
</div>

</form>

{{ form_end(form) }}

</div>

<div class="w3-quarter w3-container"></div>

</div> 

{% endblock %}
