{# templates/user/forgot.login.or.password.html.twig #}

{% extends 'base.unconnected.html.twig' %}
 
{% block body %}

<div class="w3-container w3-blue-grey">
	<h4><i class="fa fa-sign-in w3-xlarge"></i>&nbsp;{{ 'user.forgot.login.or.password'|trans }}</h4>
</div>

<div class="w3-row">
	<div class="w3-quarter w3-container"></div>
	<div class="w3-half w3-container">

	<form action="{{ path('user_forgot_login_or_password') }}" method="post">

	<form class="w3-container">
	{{ form_errors(form) }}
		<p>{{ form_row(form.email) }}</p>
	{{ form_rest(form) }}

	<div class="w3-bar">
		<a href="{{ path('user_login') }}" class="w3-bar-item w3-button w3-light-gray w3-border"><i class="fa fa-chevron-left"></i>&nbsp;{{ 'cancel'|trans }}</a>
		<button type="submit" class="w3-bar-item w3-button w3-green"><i class="fa fa-check"></i>&nbsp;{{ 'validate'|trans }}</button>
	</div>

	</form>

	</div>
	<div class="w3-quarter w3-container"></div>
</div> 

{% endblock %}

{% block javascripts %}
<script>document.getElementById('sd_email_email').focus();</script>
{% endblock %}
