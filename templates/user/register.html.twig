{% extends 'base.unconnected.html.twig' %}
 
{% block body %}

<div class="w3-container w3-margin-top w3-blue-grey">
	<h4><i class="fa fa-user w3-xlarge"></i>&nbsp;{{ 'user.registration'|trans }}</h4>
</div>

<div class="w3-row">

<div class="w3-quarter w3-container"></div>

<div class="w3-half w3-container">

{{ form_start(form, {'action': path('user_registration'), 'method': 'POST'}) }}

<form class="w3-container">

<p>{{ form_row(form.accountType) }}</p>
<p>{{ form_row(form.firstName) }}</p>
<p>{{ form_row(form.lastName) }}</p>

<p><label>{{ 'user.name'|trans }}</label>
{{ form_widget(form.userName) }}
<span class="w3-text-red">{{ form_errors(form.userName) }}</span></p>

<p><label>{{ 'user.email'|trans }}</label>
{{ form_widget(form.email) }}
<span class="w3-text-red">{{ form_errors(form.email) }}</span></p>

<p><label>{{ 'user.organisation.name'|trans }}</label>
{{ form_widget(form.uniqueName) }}
<span class="w3-text-red">{{ form_errors(form.uniqueName) }}</span></p>

<p><label>{{ 'user.password'|trans }}</label>
{{ form_widget(form.password.first) }}
<span class="w3-text-red">{{ form_errors(form.password.first) }}</span></p>

<p>{{ form_row(form.password.second) }}</p>

{{ form_rest(form) }}

<button type="submit" class="w3-btn w3-green"><i class="fa fa-check"></i>&nbsp;{{ 'user.register'|trans }}</button>

</form>

{{ form_end(form) }}

</div>

<div class="w3-quarter w3-container"></div>

</div> 

{% endblock %}

{% block javascripts %}
<script src="{{ asset('scripts/user_register.js') }}"></script>
{% endblock %}
